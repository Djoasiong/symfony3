{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1 class="d-flex justify-content-center">Inscription</h1>
        <div class="container">{{ form_start(registrationForm) }}</div>
        <div class="d-flex justify-content-center ms-5 fs-2">{{ form_row(registrationForm.email) }}</div>
        <div class="d-flex justify-content-center mt-5 fs-2">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</div>
        <div class="d-flex justify-content-center mt-5 fs-2">{{ form_row(registrationForm.agreeTerms) }}</div>
        <button type="submit" class="btn btn-secondary btn-inscription mt-5">S'inscrire</button>
        {{ form_end(registrationForm) }}
</main>
{% endblock %}