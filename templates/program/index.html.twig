{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<main class="container mt-5">
		<div class=" mb-3">
			<h1 class=" series mb-3 d-flex justify-content-center">Toutes les séries</h1>
				<div class="mb-5">
					{{ form_start(form) }}
					{{ form_widget(form) }}
					<button class="mt-3">Search</button>
					{{ form_end(form) }}
				</div>
				<a class="btn btn-secondary d-flex justify-content-center" href="{{ path('program_new') }}">Ajouter un programme</a>
					{% for program in programs %}
						<div class="row g-0 p-4">
							<div class="col-md-4">
								<img src="{{ vich_uploader_asset(program) }}" class="image img-fluid rounded-start mt-5" alt="{{ program.title }}">
							</div>
							<div class="col-md-8 align-self-center">
								<div class="card-body">
									<h2 class="d-flex justify-content-center">{{ program.title }}</h2>
									<p class="d-flex justify-content-center">Catégorie : {{ program.category.name }}</p>
								</div>
								<p>{{ program.summary }}</p>
								<a class="btn text-light" href="{{ path("program_show", { slug:program.slug }) }}">Voir la fiche</a>
								<a class="btn btn-outline-primary text-dark text-decoration-none" href="{{ path('program_delete', { slug: program.slug} ) }}">Supprimer</a>
							</div>
						</div>
							<a class="btn btn-outline-primary text-dark ms-4 text-decoration-none" href="{{ path('program_edit', { slug: program.slug} ) }}">Éditer</a>
						{% else %}Aucune série trouvée.
					{% endfor %}
		</div>
	</main>
{% endblock %}
