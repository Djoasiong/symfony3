{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1 class="ms-5 mt-5 mb-3 d-flex justify-content-center">Toutes les séries de la table program :</h1>
	{% for program in programs %}
		<div class="ms-5">
		<img src="{{ program.poster }}" class="img-fluid rounded-start mt-5" alt="{{ program.title }}">
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
				</div>
			<p class="ms-5">{{ program.summary }}</p>
			{# Lien vers la fiche de la série : #}
			<a class="ms-5" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		{% else %}Aucune série trouvée.
	{% endfor %}
	<a href="{{ path('app_index') }}" class="ms-5">Retour à l'accueil</a>
{% endblock %}
