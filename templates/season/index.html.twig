{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1 class="index d-flex justify-content-center mt-5 mb-5 bg-secondary">{{ 'seasons'|trans }}</h1>
    <main class="container">
<a class="btn btn-primary" href="{{ path('season_new') }}">{{ 'addSeason'|trans }}</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a class="btn show btn-secondary" href="{{ path('season_show', {'id': season.id}) }}">show</a>
                    <a class="btn edit btn-primary mt-2" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </main>
{% endblock %}
